{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@claude-agent-manager/shared": ["./packages/shared/src"],
      "@claude-agent-manager/server": ["./packages/server/src"],
      "@claude-agent-manager/client": ["./packages/client/src"],
      "@claude-agent-manager/agentic-base": ["./packages/agentic-base/src"]
    }
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}